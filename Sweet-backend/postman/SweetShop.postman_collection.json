{
  "info": {
    "_postman_id": "b6f8f7f9-0f02-4c8a-b3bc-98b3e2b2b5a1",
    "name": "Sweet Shop Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"User\",\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch(e) {}",
                  "if (json && json.token) { pm.environment.set('userToken', json.token); }",
                  "if (json && json.user && json.user.email) { pm.environment.set('userEmail', json.user.email); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch(e) {}",
                  "if (json && json.token) { pm.environment.set('userToken', json.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch(e) {}",
                  "if (json && json.token) { pm.environment.set('adminToken', json.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Sweets",
      "item": [
        {
          "name": "Create Sweet",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{sweetName}}\",\n  \"category\": \"{{sweetCategory}}\",\n  \"price\": {{sweetPrice}},\n  \"quantity\": {{sweetQuantity}}\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch(e) {}",
                  "if (json && json._id) { pm.environment.set('sweetId', json._id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get All Sweets",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets"]
            }
          },
          "response": []
        },
        {
          "name": "Search Sweets",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets/search?name={{sweetName}}&category={{sweetCategory}}&minPrice={{minPrice}}&maxPrice={{maxPrice}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets", "search"],
              "query": [
                { "key": "name", "value": "{{sweetName}}" },
                { "key": "category", "value": "{{sweetCategory}}" },
                { "key": "minPrice", "value": "{{minPrice}}" },
                { "key": "maxPrice", "value": "{{maxPrice}}" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Sweet",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets/{{sweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets", "{{sweetId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": {{updatePrice}}\n}"
            }
          },
          "response": []
        },
        {
          "name": "Purchase Sweet",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{userToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets/{{sweetId}}/purchase",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets", "{{sweetId}}", "purchase"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": {{purchaseAmount}}\n}"
            }
          },
          "response": []
        },
        {
          "name": "Restock Sweet (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets/{{sweetId}}/restock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets", "{{sweetId}}", "restock"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": {{restockAmount}}\n}"
            }
          },
          "response": []
        },
        {
          "name": "Delete Sweet (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/sweets/{{sweetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "sweets", "{{sweetId}}"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
